{
  "name": "karaoke-tracker",
  "version": "1.0.0",
  "description": "Simple Karaoke Singers list tracker",
  "source": "src/index.html",
  "scripts": {
    "clear": "rm -rf .parcel-cache dist",
    "predev": "pnpm clear",
    "dev": "parcel src/index.html",
    "prebuild": "pnpm clear",
    "build": "parcel build src/index.html --public-url ./",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "prettier --write \"src/**/*.{html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{html,css,json}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@parcel/transformer-inline-string": "2.16.3",
    "parcel": "2.16.3",
    "prettier": "3.7.4"
  }
}
